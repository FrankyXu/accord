<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>with-jdk15-libs</id>

  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
    <!-- ======================== -->
    <!--    License and Infos     -->
    <!-- ======================== -->
    <fileSet>
      <directory>${basedir}/../../camel-oftp</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>

    <!-- ======================== -->
    <!--  Dependencies licensing  -->
    <!-- ======================== -->
    <fileSet>
      <directory>${basedir}/../../camel-oftp/license</directory>
      <outputDirectory>licenses</outputDirectory>
    </fileSet>

  </fileSets>

  <dependencySets>
    <!-- ======================== -->
    <!--  LIB in the main folder  -->
    <!-- ======================== -->
	<dependencySet>
	  <outputDirectory>/</outputDirectory>
	  <includes>
	    <include>org.neociclo.accord.odetteftp:camel-oftp:*:jar:*</include>
	  </includes>
	  <excludes>
	    <exclude>org.neociclo.accord.odetteftp:camel-oftp:*:jar:javadoc</exclude>
	    <exclude>org.neociclo.accord.odetteftp:camel-oftp:*:jar:sources</exclude>
	  </excludes>
	</dependencySet>

    <!-- ======================== -->
    <!--   Dependencies in /lib   -->
    <!-- ======================== -->
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <excludes>
        <exclude>org.neociclo.accord.odetteftp:camel-oftp:*:jar:*</exclude>
        <exclude>org.neociclo.accord.odetteftp.assemblies:*:jar:*</exclude>
	    <exclude>*:*-jdk16:jar:*</exclude>
	  </excludes>
    </dependencySet>

    <!-- ======================== -->
    <!--         JavaDocs         -->
    <!-- ======================== -->
	<dependencySet>
	  <outputDirectory>docs/</outputDirectory>
	  <unpack>true</unpack>
	  <includes>
	    <include>org.neociclo.accord.odetteftp:camel-oftp:*:jar:javadoc</include>
	  </includes>
	</dependencySet>

    <!-- ======================== -->
    <!--          Sources         -->
    <!-- ======================== -->
	<dependencySet>
	  <outputDirectory>src/</outputDirectory>
	  <unpack>true</unpack>
	  <includes>
	    <include>org.neociclo.accord.odetteftp:camel-oftp:*:jar:sources</include>
	  </includes>
	</dependencySet>
  </dependencySets>
</assembly>